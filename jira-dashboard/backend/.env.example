# Database
DATABASE_URL=postgresql://user:password@localhost:5432/jira_dashboard

# Jira API
# For Jira Cloud (atlassian.net):
#   - Set JIRA_AUTH_TYPE=basic and provide JIRA_USERNAME + JIRA_API_TOKEN
#   - Use JIRA_API_VERSION=3 (default)
# For Jira Data Center/Server (e.g., jira.company.com):
#   - Prefer JIRA_AUTH_TYPE=bearer and provide JIRA_BEARER_TOKEN (PAT)
#   - API version is usually v2; leave JIRA_API_VERSION unset to auto-detect
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-api-token
JIRA_API_VERSION=3
# Auth type: 'basic' for Cloud; 'bearer' for DC PAT
JIRA_AUTH_TYPE=basic
# If using 'bearer', set your Personal Access Token here
JIRA_BEARER_TOKEN=
# Optional: If your instance uses a different story points field key
JIRA_STORY_POINTS_FIELD=customfield_10016
# Enable verbose Jira request debugging (URLs, params, auth presence; secrets masked)
JIRA_DEBUG=false

# Jira Sync Filters
# Comma-separated or JSON array of project keys to sync
JIRA_PROJECT_KEYS=PROJ1,PROJ2
# Default created-since date filter used by sync endpoint (YYYY-MM-DD)
JIRA_CREATED_SINCE=2025-01-01

# OAuth2 (if using OAuth instead of API token)
JIRA_CLIENT_ID=your-client-id
JIRA_CLIENT_SECRET=your-client-secret
JIRA_REDIRECT_URI=http://localhost:3000/auth/callback

# App Settings
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# GitLab API
# Base URL of your GitLab instance (e.g., https://gitlab.com or https://gitlab.company.com)
GITLAB_BASE_URL=https://gitlab.com
# GitLab Personal Access Token (with api scope) or CI_JOB_TOKEN
GITLAB_TOKEN=
# GitLab project IDs to pull activity from (JSON array or CSV)
GITLAB_PROJECT_IDS=
# Default lookback window in days if 'since' not provided
GITLAB_DEFAULT_SINCE_DAYS=90
# Concurrency and page size
GITLAB_CONCURRENCY=6
GITLAB_PAGE_SIZE=100

# Map branch patterns to customers for activity attribution
# Accepts JSON object or CSV 'pattern=Customer' pairs
# Example for your customers:
#   S9.1.X  -> MAIF
#   S9.2.X  -> CLV
#   S9.2.2.X -> PROCAP
#   S9.2.1.X -> MIF
#   S8.1.X  -> HYT
#   master  -> Build
GITLAB_BRANCH_CUSTOMER_MAP={"S9.1.X":"MAIF","S9.2.X":"CLV","S9.2.2.X":"PROCAP","S9.2.1.X":"MIF","S8.1.X":"HYT","master":"Build"}